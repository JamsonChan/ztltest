<test tags="Z30-alignPack-0001.zul,Z30,A,E,Hbox,VisionTest">
	<case id="Hbox">
		<server><!--
<zk xmlns:n="http://www.zkoss.org/2005/zk/native">
	<n:p>When you choose each radio button, the textbox inside the blue line is located properly.</n:p>
	<n:p><n:strong>PACK: </n:strong>It means horizontal position.</n:p>
	<n:p><n:strong>ALIGN: </n:strong>It means vertical position.</n:p>
	<label value="PACK AND ALIGN - HBOX:" />
	<style>
		table.hbox{ 
			border: solid blue 1px; }
	</style>
	<hbox sclass="hbox" id="hb" height="90px"
		width="90px" pack="stretch">
		<textbox height="30px" width="30px" />
	</hbox>
	<vbox>
	<hbox>
	PACK:
	<radiogroup id="grp1">
		<attribute name="onCheck">
			hb.setPack((sck1.isChecked() ? sck1.label + "," : "") + grp1.selectedItem.label);
		</attribute>
		<checkbox id="sck1" checked="true" label="stretch" >
			<attribute name="onCheck">
			hb.setPack((sck1.isChecked() ? sck1.label + "," : "") + grp1.selectedItem.label);
			</attribute>
		</checkbox>
		<radio id="r0" checked="true" label="start" />
		<radio id="r1" label="center" />
		<radio id="r2" label="end" />
	</radiogroup>
	</hbox>
	<hbox>
	ALIGN:
	<radiogroup>
		<attribute name="onCheck">
			hb.setAlign(self.selectedItem.label);
		</attribute>
		<radio id="r3" label="stretch" />
		<radio id="r4" checked="true" label="start" />
		<radio id="r5" label="center" />
		<radio id="r6" label="end" />
	</radiogroup>
	</hbox>	
	
	<separator bar="true"/>
	
	<hbox sclass="hbox" id="hb2" height="90px"
		width="270px" pack="stretch">
		<textbox height="30px" width="30px" />
		<textbox height="30px" width="30px" />
		<textbox height="30px" width="30px" />
	</hbox>
	<hbox>
	PACK:
	<radiogroup id="grp2">
		<attribute name="onCheck">
			hb2.setPack((sck2.isChecked() ? sck2.label + "," : "") + grp2.selectedItem.label);
		</attribute>
		<checkbox id="sck2" checked="true" label="stretch" >
			<attribute name="onCheck">
				hb2.setPack((sck2.isChecked() ? sck2.label + "," : "") + grp2.selectedItem.label);
			</attribute>
		</checkbox>
		<radio id="r20" checked="true" label="start" />
		<radio id="r21" label="center" />
		<radio id="r22" label="end" />
	</radiogroup>
	</hbox>
	<hbox>
	ALIGN:
	<radiogroup>
		<attribute name="onCheck">
			hb2.setAlign(self.selectedItem.label);
		</attribute>
		<radio id="r23" label="stretch" />
		<radio id="r24" checked="true" label="start" />
		<radio id="r25" label="center" />
		<radio id="r26" label="end" />
	</radiogroup>
	</hbox>
	This setSpacing is used to test the horizontal space between each other.
	<hbox>
	<intbox id="in2"/>
	<button label="setSpacing" onClick='hb2.setSpacing(in2.getValue().toString()+"px")'/>
	</hbox>
	</vbox>
</zk>
		--></server>
		<client><![CDATA[
				// pack start
				click(r3.$n("real"));
				click(r23.$n("real"));
				verifyImage();
				click(r4.$n("real"));
				click(r24.$n("real"));
				verifyImage();
				click(r5.$n("real"));
				click(r25.$n("real"));
				verifyImage();
				click(r6.$n("real"));
				click(r26.$n("real"));
				verifyImage();
				
				// pack center
				click(r1.$n("real"));
				click(r21.$n("real"));
				click(r3.$n("real"));
				click(r23.$n("real"));
				verifyImage();
				click(r4.$n("real"));
				click(r24.$n("real"));
				verifyImage();
				click(r5.$n("real"));
				click(r25.$n("real"));
				verifyImage();
				click(r6.$n("real"));
				click(r26.$n("real"));
				verifyImage();
				
				// pack end
				click(r2.$n("real"));
				click(r22.$n("real"));
				click(r3.$n("real"));
				click(r23.$n("real"));
				verifyImage();
				click(r4.$n("real"));
				click(r24.$n("real"));
				verifyImage();
				click(r5.$n("real"));
				click(r25.$n("real"));
				verifyImage();
				click(r6.$n("real"));
				click(r26.$n("real"));
				verifyImage();
				

				click(sck1.$n("real"));
				click(sck2.$n("real"));				
				// pack start without stretch
				click(r0.$n("real"));
				click(r20.$n("real"));
				click(r3.$n("real"));
				click(r23.$n("real"));
				verifyImage();
				click(r4.$n("real"));
				click(r24.$n("real"));
				verifyImage();
				click(r5.$n("real"));
				click(r25.$n("real"));
				verifyImage();
				click(r6.$n("real"));
				click(r26.$n("real"));
				verifyImage();
				
				// pack center without stretch
				click(r1.$n("real"));
				click(r21.$n("real"));
				click(r3.$n("real"));
				click(r23.$n("real"));
				verifyImage();
				click(r4.$n("real"));
				click(r24.$n("real"));
				verifyImage();
				click(r5.$n("real"));
				click(r25.$n("real"));
				verifyImage();
				click(r6.$n("real"));
				click(r26.$n("real"));
				verifyImage();
				
				// pack end without stretch
				click(r2.$n("real"));
				click(r22.$n("real"));
				click(r3.$n("real"));
				click(r23.$n("real"));
				verifyImage();
				click(r4.$n("real"));
				click(r24.$n("real"));
				verifyImage();
				click(r5.$n("real"));
				click(r25.$n("real"));
				verifyImage();
				click(r6.$n("real"));
				click(r26.$n("real"));
				verifyImage();

				
				type(in2, "20");
				click(jq("@button"));
				verifyImage();
		]]></client>
	</case>
</test>